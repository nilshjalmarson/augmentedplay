@page "/"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<div class="start-screen">
    <div class="start-header">
        <p class="start-eyebrow">Välkommen till Bibblix spelhörna</p>
        <h1>Vad vill ni leka idag?</h1>
        <p>Välj mellan den klassiska biokassan eller den nya spa-kassan med bokningssystem.</p>
    </div>

    <div class="start-options">
        <div class="start-card">
            <div class="start-icon">🎬</div>
            <h2>Bio</h2>
            <p>Köp biljetter, popcorn och godis i ett färgstarkt kassaflöde.</p>
            <button class="start-button" @onclick='() => GåTill("/bio")'>Öppna biokassan</button>
        </div>

        <div class="start-card">
            <div class="start-icon">🧖</div>
            <h2>Spa</h2>
            <p>Boka behandlingar, välj behandlare och håll koll på tider och kvitton.</p>
            <button class="start-button" @onclick='() => GåTill("/spa")'>Öppna spa-kassan</button>
        </div>
    </div>
</div>

@code {
    private void GåTill(string sökväg) => Navigation.NavigateTo(sökväg);
}
