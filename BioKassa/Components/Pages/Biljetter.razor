@page "/biljetter"
@using BioKassa.Models
@using BioKassa.Services
@using System.Globalization
@using Microsoft.AspNetCore.Components.Web
@rendermode InteractiveServer
@inject ProduktService ProduktService
@inject Varukorg Varukorg

<h1>Bio Biljetter</h1>

<div class="bio-kassa-container">
    <div class="product-grid">
        @foreach (var produkt in biljetter)
        {
            <div class="product-card" @onclick="() => LäggTillProdukt(produkt)">
                <div class="product-icon @GetIconKlass(produkt)"></div>
                <div class="product-name">@produkt.Namn</div>
                <div class="product-price">@FormatPris(produkt.Pris) kr</div>
            </div>
        }
    </div>

    <div class="cart-container">
        <div class="cart-title">Varukorg</div>
        @if (!Varukorg.Items.Any())
        {
            <p>Varukorgen är tom</p>
        }
        else
        {
            @foreach (var item in Varukorg.Items)
            {
                <div class="cart-item">
                    <div class="cart-item-name">@item.Produkt.Namn</div>
                    <div class="cart-item-controls">
                        <button class="cart-quantity-btn" @onclick="() => TaBortProdukt(item.Produkt)">-</button>
                        <span class="cart-quantity">@item.Antal</span>
                        <button class="cart-quantity-btn" @onclick="() => LäggTillProdukt(item.Produkt)">+</button>
                    </div>
                    <div class="cart-item-price">@FormatPris(item.Summa) kr</div>
                </div>
            }

            <div class="cart-total">
                <div>Totalt:</div>
                <div>@FormatPris(Varukorg.Totalsumma) kr</div>
            </div>

            <div class="cart-actions">
                <button class="action-button btn-pay" @onclick="Betala">Betala</button>
                <button class="action-button btn-clear" @onclick="TömVarukorg">Töm varukorg</button>
            </div>
        }
    </div>
</div>

@if (visaKvitto)
{
    <div class="modal" style="display: block; background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kvitto</h5>
                    <button type="button" class="btn-close" @onclick="StängKvitto"></button>
                </div>
                <div class="modal-body">
                    <h4>Tack för ditt köp!</h4>
                    <p>Datum: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</p>
                    <hr />
                    @foreach (var item in kvittoItems)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@item.Produkt.Namn x @item.Antal</span>
                            <span>@FormatPris(item.Summa) kr</span>
                        </div>
                    }
                    <hr />
                    <div class="d-flex justify-content-between fw-bold">
                        <span>Totalt:</span>
                        <span>@FormatPris(kvittoSumma) kr</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @onclick="StängKvitto">Stäng</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Produkt> biljetter = new();
    private bool visaKvitto = false;
    private List<VarukorgItem> kvittoItems = new();
    private decimal kvittoSumma = 0;

    protected override void OnInitialized()
    {
        HämtaProdukter();
    }

    private void HämtaProdukter()
    {
        biljetter = ProduktService.HämtaProdukterEfterTyp(ProduktTyp.Biljett);
    }

    private void LäggTillProdukt(Produkt produkt)
    {
        Varukorg.LäggTill(produkt);
        StateHasChanged();
    }

    private void TaBortProdukt(Produkt produkt)
    {
        Varukorg.TaBort(produkt);
        StateHasChanged();
    }

    private void TömVarukorg()
    {
        Varukorg.Rensa();
        StateHasChanged();
    }

    private void Betala()
    {
        // Spara kvittodata
        kvittoItems = new List<VarukorgItem>(Varukorg.Items);
        kvittoSumma = Varukorg.Totalsumma;
        
        // Töm varukorgen
        Varukorg.Rensa();
        
        // Visa kvitto
        visaKvitto = true;
    }

    private void StängKvitto()
    {
        visaKvitto = false;
    }

    private string GetIconKlass(Produkt produkt)
    {
        return produkt.Typ switch
        {
            ProduktTyp.Biljett when produkt.Namn.Contains("Vuxen") => "icon-ticket",
            ProduktTyp.Biljett when produkt.Namn.Contains("Barn") => "icon-ticket-child",
            ProduktTyp.Biljett when produkt.Namn.Contains("Pensionär") => "icon-ticket-senior",
            _ => ""
        };
    }

    private string FormatPris(decimal pris)
    {
        return pris.ToString("0.00", CultureInfo.GetCultureInfo("sv-SE"));
    }
}