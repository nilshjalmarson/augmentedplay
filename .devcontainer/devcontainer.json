	"image": "mcr.microsoft.com/devcontainers/dotnet:2-10.0-noble",
	"features": {
		"ghcr.io/devcontainers/features/aws-cli:1": {},
		"ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {},
